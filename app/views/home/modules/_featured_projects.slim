#cases.carousel.slide.carousel-fade
  .carousel-inner
    - featured_projects.each do |project|
      .item class=make_active_if_first(@featured_projects,project)
        figure title="" data-media600=project.image.url(:big) data-media440=project.image.url(:big) data-media=project.image.url(:big)

          = image_tag project.image.url(:big)

          noscript
            = image_tag project.image.url(:big)

        .carousel-caption
          h4 = project.name
          p = project.summary

          = link_to 'Visit Site', project.url, class: 'more', target: 'blank'
  /! Carousel nav
  a.carousel-control.left data-slide="prev" href="#cases"
    i.icon-titleleft
  a.carousel-control.right data-slide="next" href="#cases"
    i.icon-titleright

